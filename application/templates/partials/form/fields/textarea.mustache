<div class="control">
  <label class="label" for="{{field.id}}">{{field.label}}</label>
  <p>
    <textarea class="textarea {{#field.error}}is-danger{{/field.error}}" name="{{field.name}}" id="{{field.id}}" placeholder="{{field.placeholder}}" {{field.required}} {{#field.size}}size="{{field.size}}"{{/field.size}}>{{field.value}}</textarea>
  </p>
  {{#field.error}}
  <p class="help is-danger">
    {{field.error}}
  </p>
  {{/field.error}}
</div>
