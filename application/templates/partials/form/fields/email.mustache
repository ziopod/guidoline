<div class="field">
  {{#field.label}}<label class="label" for="{{field.id}}">{{field.label}}</label>{{/field.label}}
  <div class="control">
    <input class="input {{field.class}} {{#field.error}}is-danger{{/field.error}}" name="{{field.name}}" id="{{field.id}}" placeholder="{{field.placeholder}}" value="{{field.value}}" {{field.required}} {{#field.size}}size="{{field.size}}"{{/field.size}} type="email">
  </div>
  {{#field.help}}
  <p class="help">
    {{field.help}}
  </p>
  {{/field.help}}
  {{#field.error}}
  <p class="help is-danger">
    {{field.error}}
  </p>
  {{/field.error}}
</div>
