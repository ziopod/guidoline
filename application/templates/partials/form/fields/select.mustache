<div class="control">
  <label class="label" for="{{field.id}}">{{field.label}}</label>
  <p class="select {{#field.multiple}}is-multiple{{/field.multiple}}">
    <select name="{{field.name}}" id="{{field.id}}" {{field.multiple}} {{#field.size}}size="{{field.data.size}}"{{/field.size}}>
      {{#field.data.options}}
        <option value="{{option.value}}" {{option.selected}}>
          {{option.label}}
        </option>
      {{/field.data.options}}
    </select>
  </p>
  {{#field.error}}
  <p class="help is-danger">
    {{field.error}}
  </p>
  {{/field.error}}
</div>
