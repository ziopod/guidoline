<div class="control">
  <label class="label" for="{{field.id}}">{{field.label}}</label>
  <p>
    <input class="input {{#field.error}}is-danger{{/field.error}}" name="{{field.name}}" id="{{field.id}}" placeholder="{{field.placeholder}}" value="{{field.value}}" {{field.required}} {{#field.size}}size="{{field.size}}"{{/field.size}} type="text">
  </p>
  {{#field.error}}
  <p class="help is-danger">
    {{field.error}}
  </p>
  {{/field.error}}
</div>
