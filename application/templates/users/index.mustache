<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Username</th>
			<th>Email</th>
			<th>Rôle</th>
		</tr>
	</thead>
	<tbody>
	{{#users}}
		<tr>
			<td>{{id}}</th>
			<td><a href="{{base_url}}users/profil/{{id}}">{{username}}</a></td>
			<td>{{email}}</td>
			<td>{{role.name}} <i>{{role.description}}</td>
		</tr>
		<tr>
			<td  colspan="4">
				<a href="{{base_url}}users/edit/{{id}}">Modifier</a>
				-
				{{#member.id}}
					<a href="{{base_url}}members/profil/{{member.id}}">Fiche membre</a>
				{{/member.id}}
				{{^member.id}}
					Cette utilisateur n'est pas membre de l'association
				{{/member.id}}
			</td>
		</tr>
	{{/users}}
	{{^users}}
		<tr>
			<td colspan="3">
				— Aucun utilisateur pour l'instant —
				<a href="{{base_url}}users/edit/">Ajoutez votre premier utilisateur</a>
			</td>
		</tr>
	{{/users}}
	</tbody>
</table>
{{#users_count}}Nombre total d'utilisateurs : {{users_count}}{{/users_count}}
<p>
	<a href="{{base_url}}users/edit">Ajouter un nouvel utilisateur</a>
</p>
<p>
	<a href="{{base_url}}users.json">Réponse au format JSON</a>
</p>