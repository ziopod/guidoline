<div class="content is-sr-only">
{{! <div class="content"> }}
  <h1>Tableau de bord</h1>
</div>

<div class="columns is-multiline">
  <section class="column is-two-firths">
    <div class="content box">
      <h2 class="is-size-4">Adhérent #{{member.idm}}</h2>
      {{>form/member/edit}}
    </div>
  </section>
  <div class="column">
    <section class="content box is-light">
      <h3>Derniers enregistrements</h3>
      {{#members_last_created}}
      <table class="table is-hoverable">
        {{#members_last_created.records}}
        {{>table/members/row_light}}
        {{/members_last_created.records}}
      </table>
      {{/members_last_created}}
      <a href="/adherents" class="button is-dark is-outlined">Tous les adhérents</a>
    </section>
  </div>
</div>
