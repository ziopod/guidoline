<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Prénom &amp; Nom</th>
			<th>première date d'inscription</th>
			<th>Statut</th>
			<th>Email</th>
			<th>Téléphone</th>
			<th>Adresse</th>
			<th>Adhésion</th>
		</tr>
	</thead>
	<tbody>
		{{#members}}
		<tr>
			<td>{{id}}</td>
			<td><a href="{{base_url}}members/profil/{{id}}">{{firstname}} {{name}}</a></td>
			<td>{{created}}</td>
			<td>{{status.name}}</td>
			<td>{{email}}</td>
			<td>{{phone}}</td>
			<td>
				{{street}} - {{zipcode}} {{city}}
			</td>
			<td>
				{{#last_valid_subscriptions}}
				<strong><a href="{{base_url}}subscriptions/detail/{{subscription.id}}">{{subscription.title}}</a></strong>
				<p>
					{{#valid_subscription}}
						—inscription valide—
						<br />
						Inscrit le {{start_date}} ({{elapsed_time_fuzzy}})
						<br />
						Périmé {{remaining_time}} (le {{end_date}})
					
					{{/valid_subscription}}

					{{^valid_subscription}}
						—inscription périmé—
						<br />
						Périmé depuis le {{end_date}} ({{end_date_fuzzy}})

					{{/valid_subscription}}
				</p>
				{{/last_valid_subscriptions}}
				{{^last_valid_subscriptions}}
					- Aucune inscription - 
					<br />
				{{/last_valid_subscriptions}}
				<a href="{{base_url}}members/subscriptions/{{id}}">Gérer les inscriptions</a>
			</td>
		</tr>
		<tr>
			<td></td>
			<td colspan="6">
				<a href="{{base_url}}members/edit/{{id}}">Modifier la fiche membre</a>
				-
				{{#user.id}}
					<a href="{{base_url}}users/profil/{{user.id}}">Fiche utilisateur</a>
				{{/user.id}}
				{{^user.id}}
					Ce membre n'as pas de compte utilisateur
				{{/user.id}}
			</td>
		</tr>
		{{/members}}
		{{^members}}
			<tr>
				<td colspan="3">
					— Aucun membre pour l'instant —
					<a href="{{base_url}}members/edit/">Ajoutez votre premier membre</a>
				</td>
			</tr>
		{{/members}}
	</tbody>
</table>
{{#members_count}}Nombre total de membres : {{members_count}}{{/members_count}}
<p>
	<a href="{{base_url}}members/edit">Ajouter un nouveau membre</a>
</p>
<p>
	<a href="{{base_url}}members.json">Réponse au format JSON</a>
</p>