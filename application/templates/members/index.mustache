<section class="content_stat">
	<div class="row">
	 <div class="span3">
	 	<h2>Actifs</h2>
	 	<div class="block">
	 		<span class="stat number_member">{{count_active_members}} / {{count_members}}</span> membres actifs dans l'association
	 	</div>
	</div>
	 <div class="span3">
	 	<h2>Nouveaux</h2>
	 	<div class="block">
	 		<span class="stat number_member">{{new_membersship_during_year}}</span> nouveaux membres en 2013
	 	</div>
	 </div>
	<div class="span3">
		<h2>Renouvellement</h2>
		<div class="block">
			<span class="stat number_member">{{turnover}}%</span> de membres inscrits depuis plus de 3 ans
		</div>
	</div>
	<div class="span3">
		<h2>Moyenne d'âge</h2>
		<div class="block">
			<span class="stat number_member">{{average_age}}%</span> des membres ont moins de 25 ans
		</div>
	</div>
	</div>
</section>

<nav class="nav_edit">
	<ul>
		<!-- <li>
			<a class="btn btn-info" href="{{base_url}}members.json">Réponse au format JSON</a>
		</li> -->
		<li>
			<a class="btn btn-info modale tip" title="Ajouter un nouveau membre" href="{{base_url}}members/edit#form_content"><i class="icon-plus"></i> Membre</a>
		</li>
	</ul>
</nav>

<section class="content_table">
	<h1>Tableaux des membres</h1>
	<table id="table_members" class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Naissance</th>
				<th>Inscription</th>
				<th>Email</th>
				<th>Téléphone</th>
				<th>Ville</th>
				<th>Adhésion</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{{#members}}
			<tr>
				<td><a class="modale" href="{{base_url}}members/profil/{{id}}">{{firstname}} {{name}}</a></td>
				<td>{{birthdate}}</td>
				<td>{{created}}</td>
				<td>{{email}}</td>
				<td>{{phone}}</td>
				<td>
					{{city}}
				</td>
				<td>
					{{#last_valid_subscriptions}}
					<a href="{{base_url}}subscriptions/detail/{{subscription.id}}" class="tip" title="
						{{#valid_subscription}}
						<strong>Inscription valide</strong>
						<p>
							Inscrit le {{start_date}} ({{elapsed_time_fuzzy}})
							<br />
							Périmé {{remaining_time}} (le {{end_date}})
						{{/valid_subscription}}
						{{^valid_subscription}}
							—inscription périmé—
							<br />
							Périmé depuis le {{end_date}} ({{end_date_fuzzy}})
						{{/valid_subscription}}</p>">{{subscription.title}}</a>
					{{/last_valid_subscriptions}}
					{{^last_valid_subscriptions}}
						- Aucune inscription - 
						<br />
					{{/last_valid_subscriptions}}
					<a href="{{base_url}}members/subscriptions/{{id}}" class="icon-cog icon-2x tip" title="Gérer les inscriptions"></a>
				</td>
				<td>
					<p><a class="icon-pencil icon-2x modale tip" href="{{base_url}}members/edit/{{id}}#form_content" title="Modifier"></a></p>
					{{#user.id}}
					<a class="btn" href="{{base_url}}users/profil/{{user.id}}">Fiche utilisateur</a></p>
					{{/user.id}}
				</td>
			</tr>
			{{/members}}
		</tbody>
	</table>
	
</section>
