{{#members}}{{/members}}
<section class="content_stat">
	<h1>Statistiques</h1>
	<div class="row">
	  {{#members_count}}<div class="span3"><h2>Actifs</h2><div class="block"><span class="stat number_member">{{members_count}}</span> membres actifs dans l'association</div></div>{{/members_count}}
	  <div class="span3"><h2>Nouveaux/Total</h2><div class="block"><span class="stat number_member">10%</span> de nouveaux membres en 2013</div></div>
		<div class="span3"><h2>Renouvellement</h2><div class="block"><span class="stat number_member">30%</span> de membres inscrits depuis plus de 3 ans</div></div>
		<div class="span3"><h2>Moyenne d'âge</h2><div class="block"><span class="stat number_member">60%</span> des membres ont moins de 25 ans</div></div>
	</div>
</section>

<nav class="nav_edit">
	<ul>
		<li>
			<a class="btn btn-info" href="{{base_url}}members.json">Réponse au format JSON</a>
		</li>
		<li>
			<a class="btn btn-info modale" href="{{base_url}}members/edit#form_content">Ajouter un nouveau membre</a>
		</li>
	</ul>
</nav>

<section class="content_table">
	<h1>Tableaux des membres</h1>
	<table id="table_members" class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Nom</th>
				<th>Date d'inscription</th>
				<th>Statut</th>
				<th>Email</th>
				<th>Téléphone</th>
				<th>Adresse</th>
				<th>Adhésion</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{{#members}}
			<tr>
				<td>{{id}}</td>
				<td><a href="{{base_url}}members/profil/{{id}}">{{firstname}} {{name}}</a></td>
				<td>{{created}}</td>
				<td>{{status.name}}</td>
				<td>{{email}}</td>
				<td>{{phone}}</td>
				<td>
					{{street}} - {{zipcode}} {{city}}
				</td>
				<td>
					{{#last_subscription}}
					<a href="{{base_url}}subscriptions/{{last_subscription.subscription.id}}">{{last_subscription.subscription.title}}</a>
					<br />
					{{#last_subscription.valid}}—inscription valide—{{/last_subscription.valid}}
					{{^last_subscription.valid}}—inscription périmé—{{/last_subscription.valid}}
					<br />
					Le {{last_subscription.start_date}} ({{last_subscription.date_span_fuzzy}})
					<br />
					Inscrit il y a {{last_subscription.date_span.years}} ans, {{last_subscription.date_span.months}} mois, {{last_subscription.date_span.days}} jours, {{last_subscription.date_span.hours}} heures, {{last_subscription.date_span.minutes}} minutes, {{last_subscription.date_span.seconds}} secondes
					<br />
					Périmé dans/depuis {{last_subscription.date_remaining.years}} ans, {{last_subscription.date_remaining.months}} mois, {{last_subscription.date_remaining.days}} jours, {{last_subscription.date_remaining.hours}} heures, {{last_subscription.date_remaining.minutes}} minutes, {{last_subscription.date_remaining.seconds}} secondes ({{last_subscription.date_remaining_fuzzy}})
					{{/last_subscription}}
					{{^last_subscription}}
						- Aucune adhésion - 
					{{/last_subscription}}
					<a href="{{base_url}}members/subscriptions/{{id}}">Gérer les inscriptions</a>
				</td>
				<td>
					<a class="btn modale" href="{{base_url}}members/edit/{{id}}#form_content">Modifier la fiche membre</a>
					{{#user.id}}
					<a class="btn" href="{{base_url}}users/profil/{{user.id}}">Fiche utilisateur</a>
					{{/user.id}}
					{{^user.id}}
						Ce membre n'a pas de compte utilisateur
					{{/user.id}}
				</td>
			</tr>
			{{/members}}
		</tbody>
	</table>
	
	{{^members}}
	<p>
		— Aucun membre pour l'instant —
		<a class="btn" href="{{base_url}}members/edit/">Ajoutez votre premier membre</a>
	</p>
	{{/members}}
	
</section>
