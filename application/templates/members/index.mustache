{{#members}}{{/members}}
<section class="content_stat">
	<div class="row">
	 <div class="span3">
	 	<h2>Actifs</h2>
	 	<div class="block">
	 		<span class="stat number_member">{{count_active_members}} / {{count_members}}</span> membres actifs dans l'association.
	 		<br /><strong>{{new_membersship_during_year}}</strong> nouvelles inscriptions cette année.
	 	</div>
	</div>
	 <div class="span3">
	 	<h2>Nouveaux/Total</h2>
	 	<div class="block">
	 		<span class="stat number_member">{{percentage_new_members_during_year}}%</span> de nouveaux membres en 2013
	 	</div>
	 </div>
	<div class="span3">
		<h2>Renouvellement</h2>
		<div class="block">
			<span class="stat number_member">{{turnover}}%</span> de membres inscrits depuis plus de 3 ans
		</div>
	</div>
	<div class="span3">
		<h2>Moyenne d'âge</h2>
		<div class="block">
			<span class="stat number_member">{{average_age}}%</span> des membres ont moins de 25 ans
		</div>
	</div>
	</div>
</section>

<nav class="nav_edit">
	<ul>
		<!-- <li>
			<a class="btn btn-info" href="{{base_url}}members.json">Réponse au format JSON</a>
		</li> -->
		<li>
			<a class="btn btn-info modale tipleft" title="Ajouter un nouveau membre" href="{{base_url}}members/edit#form_content">+ Membre</a>
		</li>
	</ul>
</nav>

<section class="content_table">
	<h1>Tableaux des membres</h1>
	<table id="table_members" class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Nom</th>
				<th>Date d'inscription</th>
				<th>Statut</th>
				<th>Email</th>
				<th>Téléphone</th>
				<th>Adresse</th>
				<th>Adhésion</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{{#members}}
			<tr>
				<td>{{id}}</td>
				<td><a class="modale" href="{{base_url}}members/profil/{{id}}">{{firstname}} {{name}}</a></td>
				<td>{{created}}</td>
				<td>{{status.name}}</td>
				<td>{{email}}</td>
				<td>{{phone}}</td>
				<td>
					{{street}} - {{zipcode}} {{city}}
				</td>
				<td>
					{{#last_valid_subscriptions}}
					<a href="{{base_url}}subscriptions/detail/{{subscription.id}}" class="tip" title="
						{{#valid_subscription}}
						<h3>Inscription valide</h3>
						<p>
							Inscrit le {{start_date}} ({{elapsed_time_fuzzy}})
							<br />
							Périmé {{remaining_time}} (le {{end_date}})
						{{/valid_subscription}}
						{{^valid_subscription}}
							—inscription périmé—
							<br />
							Périmé depuis le {{end_date}} ({{end_date_fuzzy}})
						{{/valid_subscription}}</p>">{{subscription.title}}</a>
					{{/last_valid_subscriptions}}
					{{^last_valid_subscriptions}}
						- Aucune inscription - 
						<br />
					{{/last_valid_subscriptions}}
					<a href="{{base_url}}members/subscriptions/{{id}}">Gérer les inscriptions</a>
				</td>
				<td>
					<p><a class="btn modale" href="{{base_url}}members/edit/{{id}}#form_content">Modifier la fiche membre</a></p>
					{{#user.id}}
					<a class="btn" href="{{base_url}}users/profil/{{user.id}}">Fiche utilisateur</a></p>
					{{/user.id}}
				</td>
			</tr>
			{{/members}}
		</tbody>
	</table>
	
	{{^members}}
	<p>
		— Aucun membre pour l'instant —
		<a class="btn" href="{{base_url}}members/edit/">Ajoutez votre premier membre</a>
	</p>
	{{/members}}
	
</section>
