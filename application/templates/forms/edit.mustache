<div class="content box">
  {{>html_form/title}}
  <form class="is-marginless" action="{{html_form.action}}" method="post" id="{{html_form.html_form_id}}">

    {{#html_form.notifications}}
      {{>element/notification}}
    {{/html_form.notifications}}

    <input type="hidden" name="form_id" value="{{html_form.form_id}}">

    <div class="field">
      {{#html_form.data.is_active}}
      {{>html_form/fields/switch}}
      {{/html_form.data.is_active}}
    </div>
    <fieldset>
      <legend>Description</legend>
      <div class="field">
        {{#html_form.data.title}}
        {{>html_form/fields/text}}
        {{/html_form.data.title}}
        {{#html_form.data.heading}}
        {{>html_form/fields/text}}
        {{/html_form.data.heading}}
        {{#html_form.data.description}}
        {{>html_form/fields/textarea}}
        {{/html_form.data.description}}
      </div>
    </fieldset>
    <fieldset>
      <legend>Montant</legend>
      <div class="field columns">
        <div class="column">
          {{#html_form.data.price}}
          {{>html_form/fields/text}}
          {{/html_form.data.price}}
        </div>
        <div class="column">
          {{#html_form.data.select_currencies}}
          {{>html_form/fields/select}}
          {{/html_form.data.select_currencies}}
        </div>
        <div class="column">
          {{#html_form.data.free_price}}
          {{>html_form/fields/checkbox}}
          {{/html_form.data.free_price}}
        </div>
      </div>
    </fieldset>
    <fieldset>
      <legend>PÃ©riode</legend>
      <div class="field columns">
        <div class="column">
          {{#html_form.data.date_start}}
          {{>html_form/fields/date}}
          {{/html_form.data.date_start}}
        </div>
        <div class="column">
          {{#html_form.data.duration}}
          {{>html_form/fields/text}}
          {{/html_form.data.duration}}
        </div>
        <div class="column">
          {{#html_form.data.start_at_due}}
          {{>html_form/fields/checkbox}}
          {{/html_form.data.start_at_due}}
        </div>
      </div>
    </fieldset>
    {{>html_form/save_or_cancel}}
  </form>
</div>
