{{#subscription}}
<form action="{{base_url}}subscriptions/save/{{id}}" method="post">
	<input type="hidden" name="redirect" value="subscriptions">
	<fieldset>
		<legend>Adh√©sion</legend>
		{{#message}}
		{{^errors}}
		<strong class="msg-success">{{message}}</strong>
		{{/errors}}
		{{#errors}}
		<strong class="msg-error">{{message}}</strong>
		{{/errors}}
		{{/message}}
		<p>
			<label for="title">Titre</label>
			<input type="text" name="title" id="title" value="{{title}}" />
		</p>
		{{#errors}}{{#title}}<p class="form-error">{{title}}</p>{{/title}}{{/errors}}
		<p>
			<label for="description">Description</label>
			<textarea name="description" id="description" cols="30" rows="10">{{description}}</textarea>
		</p>

	</fieldset>
	<p>
		<input type="submit" value="Enregistrer" />
	</p>
</form>
{{/subscription}}